<ons-page>
  <ons-toolbar>
    <div class="center">{{'common.login' | translate}}</div>
  </ons-toolbar>
  <div class="login-form">
    <ons-button modifier="large" class="login-button bgcolor-facebook" ui-sref="index">
      <ons-icon icon="fa-facebook-square" style="font-size: 28px;" fixed-width="false"></ons-icon>Facebookでログイン
    </ons-button>

    <ons-button modifier="large" class="login-button bgcolor-twitter" ui-sref="index">
      <ons-icon icon="fa-twitter-square" style="font-size: 28px;" fixed-width="false"></ons-icon>Twitterでログイン
    </ons-button>

    <hr>
    <form name="form">
      <input type="text" class="text-input--underbar" ng-model="person.email" placeholder="Email" value="">
      <input type="password" class="text-input--underbar" ng-model="person.password" placeholder="Password" value="">
      <br>
      <br>
      <ons-button modifier="large" class="login-button" ui-sref="index" ng-click="login()">{{'common.login' | translate}}</ons-button>
      <br>
      <br>
      <ons-button modifier="quiet" class="forgot-password">Forgot password?</ons-button>
      <ons-button modifier="quiet" class="forgot-password" ui-sref="signup">{{'common.signup' | translate}}</ons-button>
    </form>
  </div>
</ons-page>
